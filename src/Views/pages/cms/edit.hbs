<div class="d-flex align-items-start justify-content-between">
  <div class="card col-sm-6 px-4 py-2">
    <form action="/cms/edit/{{Book.id}}?_method=put" method="post">
      <legend>Libro</legend>
      <fieldset>
        <div class="form-group">
          <label class="form-label">Tituto</label>
          <input type="text" name="titleForm" class="form-control" value="{{Book.title}}" />
        </div>
        <div class="form-group">
          <label class="form-label">Autor</label>
          <input type="text" name="authorForm" class="form-control" value="{{Book.author}}"/>
        </div>
        <div class="form-group">
          <label class="form-label">Edicion</label>
          <input type="text" name="editionForm" class="form-control" maxlength="5" value="{{Book.edition}}"/>
        </div>
        <div class="form-group">
          <label class="form-label">AÃ±o</label>
          <input type="text" name="yearForm" class="form-control" maxlength="4" value="{{Book.year}}"/>
        </div>
        <div class="form-group">
          <label class="form-label">Editorial</label>
          <input type="text" name="editorialForm" class="form-control" value="{{Book.editorial}}"/>
        </div>
        <div class="form-group">
          <label class="form-label">Pais</label>
          <input type="text" name="countryForm" class="form-control" value="{{Book.country}}"/>
        </div>
        <div class="form-group">
          <label class="form-label">URL para imagen</label>
          <input type="text" name="photoForm" class="form-control" value="{{Book.photoUrl}}"/>
        </div>
        <div class="form-group">
          <label class="form-label">Categoria</label>
          <select class="form-select" name="categoryForm">
            {{#each Categories}}
              <option value={{id}}>{{categoryName}}</option>
            {{/each}}
          </select>
        </div>
      </fieldset>
        <input type="hidden" name="_method" value="put">
        <button type="submit" class="btn btn-primary mt-2">Editar</button>
    </form>
  </div>   

