<div class="d-flex align-items-start justify-content-between">
  <div class="card col-sm-6 px-4 py-2">
    <form action="/cms/add/book" method="post">
      <legend>Libro</legend>
      <fieldset>
        <div class="form-group">
          <label class="form-label">Tituto</label>
          <input type="text" name="titleForm" class="form-control" />
        </div>
        <div class="form-group">
          <label class="form-label">Autor</label>
          <input type="text" name="authorForm" class="form-control" />
        </div>
        <div class="form-group">
          <label class="form-label">Edicion</label>
          <input type="text" name="editionForm" class="form-control" maxlength="5"/>
        </div>
        <div class="form-group">
          <label class="form-label">AÃ±o</label>
          <input type="text" name="yearForm" class="form-control" maxlength="4"/>
        </div>
        <div class="form-group">
          <label class="form-label">Editorial</label>
          <input type="text" name="editorialForm" class="form-control" />
        </div>
        <div class="form-group">
          <label class="form-label">Pais</label>
          <input type="text" name="countryForm" class="form-control" />
        </div>
        <div class="form-group">
          <label class="form-label">URL para imagen</label>
          <input type="text" name="photoForm" class="form-control" />
        </div>
        <div class="form-group">
          <label class="form-label">Categoria</label>
          <select class="form-select" name="categoryForm">
            <option value="" selected>Seleccionar...</option>
            {{#each Categories}}
              <option value={{id}}>{{categoryName}}</option>
            {{/each}}
          </select>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Agregar</button>
      </fieldset>
    </form>
  </div>

  <div class="card col-sm-4 px-4 py-2">
    <form action="/cms/add/category" method="post">
      <legend>Categoria</legend>
      <fieldset>
        <div class="form-group">
          <label class="form-label">Nombre de la categoria</label>
          <input
            type="text"
            name="categoryNameForm"
            class="form-control"
            placeholder="Terror"
          />
        </div>
        <button type="submit" class="btn btn-primary mt-2">Agregar</button>
      </fieldset>
    </form>
  </div>
</div>